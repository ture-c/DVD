<Window x:Class="DVD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DVD"
        mc:Ignorable="d"
        Title="DVD" WindowStyle="ThreeDBorderWindow"  Height="500" Width="800" FontFamily="VCR OSO MONO"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="mainBackground" Background="DarkBlue">

        <Image 
            x:Name="DVDlogo"
            Width="100" 
            Height="100"    
            Source="C:\Users\turec\OneDrive\Bilder\DVD-Video_Logo.svg.png" 
            />
        <TextBlock x:Name="ScoreText"
               FontSize="24"
               Foreground="AntiqueWhite"
               Canvas.Top="10"
               Canvas.Left="10"
               Text="SCORE: 0" 
                FontFamily="VCR OSD Mono"
                />
        <TextBlock x:Name="TimedText"
                   FontSize="24"
                   Foreground="Yellow"
                   Canvas.Top="50"
                   Canvas.Left="10"
                   Text="WELCOME TO THE DVD LOGO GAME!&#10;YOU GET A SCORE WHEN THE DVD-LOGO HITS THE CORNER.&#10;YOU CAN CONTROL IT USING ARROW-KEYS."
                   FontFamily="VCR OSD Mono"/>
        

    </Canvas>

</Window>
